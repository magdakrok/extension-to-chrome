{
    "name": "Cookbook",
    "version": "1.0",
    "description": "Extension to cookbook app",
    "permissions": ["tabs", 
      "declarativeContent", 
      "storage",
      "activeTab", 
      "<all_urls>",
    "https://www.gstatic.com/firebasejs/7.21.1/firebase.js"],
      
      "background": {
        "page": "background.html",
        "persistent": false
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["app.js"],
          "run_at": "document_end"
        }
      ],
      
    "browser_action": {
      "default_popup": "popup.html",
    
    "default_icon": {
      "16": "images/cake.png",
      "32": "images/cake32px.png",
      "64": "images/cake64px.png",
      "128": "images/cake128px.png"
    }
  },

 
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
  }